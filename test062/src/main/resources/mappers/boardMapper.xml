<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chunjae.test06.per.BoardMapper">
    <!-- 게시글 목록, 리스트 -->
    <select id="getBoardList" resultType="com.chunjae.test06.entity.Board">
        select * from board order by id desc
    </select>
    <!-- 게시글 상세 -->
    <select id="getBoard" resultType="com.chunjae.test06.entity.Board">
        select * from board where id = #{id}
    </select>
    <!-- 게시글작성 -->
    <insert id="insertBoard">
        INSERT INTO board values(default, #{name}, #{title}, #{content}, default, default)
    </insert>
    <!-- 게시글수정 -->
    <update id="updatBoard">
        UPDATE board SET title=#{title}, content=#{content} WHERE id = #{id}
    </update>
    <!-- 게시판 삭제 -->
    <delete id="deleBoard">
        DELETE from board where id = #{id}
    </delete>
    <!-- 댓글 목록 -->
    <select id="commentList" resultType="com.chunjae.test06.entity.Comment">
        select * from board_com where par = #{par}
    </select>
    <!-- 댓글 작성 -->
    <insert id="inserBoardCom">
        INSERT INTO board_com values(default, #{name}, #{content}, default, #{par})
    </insert>

    <!-- 탈퇴하기 act:JOIN-활동중, DORMANT-휴면중, WITHDRAW-탈퇴중 -->
    <update id="getWithdraw">
        update board set act='WITHDRAW' where id = #{id}
    </update>
    <!-- 계정 활성화 -->
    <update id="getActivate">
        update board set act='JOIN' where name = #{name}
    </update>
    <!-- 계정 휴면 -->
    <update id="getDormant">
        update board set act='DORMANT' where name = #{name}
    </update>
    <!-- 이메일 로그인 -->
    <select id="getByEmail" resultType="com.chunjae.test06.entity.Board">
        select * from board where email = #{email}
    </select>
    <!-- id 로그인 -->
    <select id="getByName" resultType="com.chunjae.test06.entity.Board">
        select * from board where name = #{name}
    </select>
    <!-- id(no) 로 Board 찾기 -->
    <select id="getBoardById" resultType="com.chunjae.test06.entity.Board">
        select * from board where id = #{id}
    </select>
    <!-- name(실제 id) 로 Board 찾기 -->
    <select id="getBoardByName" resultType="com.chunjae.test06.entity.Board">
        select * from board where name = #{name}
    </select>
    <!-- 아이디 찾기 -->
    <select id="findById" resultType="com.chunjae.test06.entity.Board">
        select * from board where email = #{email} and tel = #{tel}
    </select>
    <!-- 비밀번호 찾기 -->
    <select id="findByPw" resultType="com.chunjae.test06.entity.Board">
        select * from board where email = #{email} and tel = #{tel} and name = #{name}
    </select>
    <!-- 회원가입 -->
    <insert id="BoardJoin">
        INSERT INTO board VALUES (DEFAULT, #{name}, #{password}, #{Boardname}, #{email}, #{address}, #{tel}, DEFAULT, DEFAULT, DEFAULT)
    </insert>
    <update id="updatePasswordNoChange">
        UPDATE board SET Boardname=#{Boardname}, address=#{address}, tel=#{tel} WHERE name = #{name}
    </update>
    <update id="updateLevel">
        UPDATE board SET lev=#{lev} WHERE name = #{name}
    </update>
</mapper>